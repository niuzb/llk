<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab1"
    android:orientation="vertical"
    android:background="@drawable/blue"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dip">
        <!--
        TextView goes on top...
    -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/start"/>

    <!--
        Followed by the EditText field...

        Also give it a standard background (the "android:"
        part in @android:drawable/editbox_background
        means it is system resource rather than
        an application resource.
    -->
    <EditText
        android:id="@+id/tab1_et1"
        android:layout_width="fill_parent"
        android:singleLine ="true"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/end"/>
    <EditText
        android:id="@+id/tab1_et2"
        android:layout_width="fill_parent"
        android:singleLine ="true"
        android:layout_height="wrap_content"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_gravity="right"
            android:text="@string/ok" 
            android:id="@+id/tab1_b1" />  
</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab2"
    android:orientation="vertical"
    android:background="@drawable/red"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dip">
        <!--
        TextView goes on top...
    -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/line"/>

    <!--
        Followed by the EditText field...

        Also give it a standard background (the "android:"
        part in @android:drawable/editbox_background
        means it is system resource rather than
        an application resource.
    -->
    <EditText
        android:id="@+id/tab2_et1"
        android:layout_width="fill_parent"
        android:singleLine ="true"
        android:layout_height="wrap_content"/>
  
      <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
             android:layout_gravity="right"
            android:text="@string/ok" 
            android:id="@+id/tab2_b1" /> 
</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab3"
    android:orientation="vertical"
    android:background="@drawable/green"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dip">
        <!--
        TextView goes on top...
    -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
        android:text="@string/station"/>

    <!--
        Followed by the EditText field...

        Also give it a standard background (the "android:"
        part in @android:drawable/editbox_background
        means it is system resource rather than
        an application resource.
    -->
    <EditText
        android:id="@+id/tab3_et1"
        android:layout_width="fill_parent"
        android:singleLine ="true"
        android:layout_height="wrap_content"/>
  
      <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
             android:layout_gravity="right"
            android:text="@string/ok" 
            android:id="@+id/tab3_b1"/> 
</LinearLayout>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab4"
    android:orientation="vertical"
    android:background="@drawable/yellow"
    android:layout_width="fill_parent"
    android:scrollbars = "vertical"
    android:layout_height="wrap_content"
    android:padding="10dip">
        <!--
        TextView goes on top...
    --> 
       <TableLayout
            android:id="@+id/menu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TableRow>
                <TextView
                	android:id="@+id/tab4_h2"
                    android:text="@string/line"
                    android:gravity="left"
                    android:padding="3dip" />
                <TextView
                    android:id="@+id/tab4_et2"
                     android:gravity="left"
                    android:padding="3dip" />
            </TableRow>

            <TableRow>
                <TextView
                android:id="@+id/tab4_h3"
                    android:text="@string/upload"
                     android:gravity="left"
                    android:padding="3dip" />
                <TextView
                    android:id="@+id/tab4_et3"
                     android:gravity="left"
                    android:padding="3dip" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/tab4_h4"
                    android:text="@string/download"
                    android:gravity="left"
                    android:padding="3dip" />
                <TextView
                    android:id="@+id/tab4_et4"
                    android:gravity="left"
                    android:padding="3dip" />
            </TableRow>           
 </TableLayout>
</ScrollView>
   

</FrameLayout>

